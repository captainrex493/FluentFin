<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="FluentFin.Views.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c="using:FluentFin.Converters"
    xmlns:cc="using:CommunityToolkit.WinUI.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:generic="using:System.Collections.Generic"
    xmlns:jm="using:Jellyfin.Sdk.Generated.Models"
    xmlns:lc="using:FluentFin.Controls"
    xmlns:local="using:FluentFin.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:services="using:FluentFin.Core.Contracts.Services"
    Margin="{StaticResource MediumLeftRightMargin}"
    mc:Ignorable="d">

    <Page.Resources>
        <c:JellyfinImageConverter
            x:Key="ThumbnailConverter"
            ImageHeight="200"
            TypeRequest="Thumb" />
        <c:JellyfinImageConverter x:Key="PrimaryImageConverter" />
        <c:JellyfinTitleConverter x:Key="NameConverter" />
        <c:JellyfinSubtitleConverter x:Key="SubtitleConverter" />
        <c:NullableDoubleToValueOrDefaultConverter x:Key="NullableDoubleToValueOrDefaultConverter" />
        <c:NullableIntToValueOrDefaultConverter x:Key="NullableIntToValueOrDefaultConverter" />
        <c:NullableBoolToValueOrDefaultConverter x:Key="NullableBoolToValueOrDefaultConverter" />
        <cc:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </Page.Resources>

    <ScrollViewer Margin="0,10">
        <StackPanel Spacing="20">
            <StackPanel Padding="12,0,0,0" Visibility="{x:Bind ViewModel.HasContinueItems, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}">
                <TextBlock
                    Margin="{StaticResource SmallTopBottomMargin}"
                    Style="{StaticResource TitleTextBlockStyle}"
                    Text="Continue Watching" />

                <ScrollViewer
                    HorizontalScrollBarVisibility="Hidden"
                    HorizontalScrollMode="Enabled"
                    VerticalScrollBarVisibility="Disabled"
                    VerticalScrollMode="Disabled">
                    <ItemsRepeater ItemsSource="{x:Bind ViewModel.ContinueItems, Mode=OneWay}">
                        <ItemsRepeater.ItemTemplate>
                            <DataTemplate x:DataType="jm:BaseItemDto">
                                <lc:PlayableMediaItem
                                    Width="390"
                                    Height="240"
                                    ImageSource="{x:Bind Converter={StaticResource ThumbnailConverter}}"
                                    Model="{x:Bind}" />
                            </DataTemplate>
                        </ItemsRepeater.ItemTemplate>
                        <ItemsRepeater.Layout>
                            <StackLayout Orientation="Horizontal" Spacing="10" />
                        </ItemsRepeater.Layout>
                    </ItemsRepeater>
                </ScrollViewer>
            </StackPanel>

            <StackPanel Padding="12,0,0,0" Visibility="{x:Bind ViewModel.HasNextUpItems, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}">
                <TextBlock
                    Margin="{StaticResource SmallTopBottomMargin}"
                    Style="{StaticResource TitleTextBlockStyle}"
                    Text="Next Up" />

                <ScrollViewer
                    HorizontalScrollBarVisibility="Hidden"
                    HorizontalScrollMode="Enabled"
                    VerticalScrollBarVisibility="Disabled"
                    VerticalScrollMode="Disabled">
                    <ItemsRepeater ItemsSource="{x:Bind ViewModel.NextUpItems, Mode=OneWay}">
                        <ItemsRepeater.ItemTemplate>
                            <DataTemplate x:DataType="jm:BaseItemDto">
                                <lc:PlayableMediaItem
                                    Width="390"
                                    Height="240"
                                    ImageSource="{x:Bind Converter={StaticResource ThumbnailConverter}}"
                                    Model="{x:Bind}" />
                            </DataTemplate>
                        </ItemsRepeater.ItemTemplate>
                        <ItemsRepeater.Layout>
                            <StackLayout Orientation="Horizontal" Spacing="10" />
                        </ItemsRepeater.Layout>
                    </ItemsRepeater>
                </ScrollViewer>
            </StackPanel>

            <ItemsView ItemsSource="{x:Bind ViewModel.RecentItems, Mode=OneWay}" SelectionMode="None">
                <ItemsView.ItemTemplate>
                    <DataTemplate x:DataType="services:NamedDtoQueryResult">
                        <ItemContainer Margin="{StaticResource SmallLeftRightMargin}" Style="{StaticResource BareItemContainerStyle}">
                            <StackPanel>
                                <TextBlock Margin="{StaticResource MediumTopBottomMargin}" Style="{StaticResource TitleTextBlockStyle}">
                                    <Run Text="Recently Added In" />
                                    <Run Text="{x:Bind Name, Mode=OneWay}" />
                                </TextBlock>
                                <ScrollViewer
                                    HorizontalScrollBarVisibility="Hidden"
                                    HorizontalScrollMode="Enabled"
                                    VerticalScrollBarVisibility="Disabled"
                                    VerticalScrollMode="Disabled">
                                    <ItemsControl ItemsSource="{x:Bind Items, Mode=OneWay}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate x:DataType="jm:BaseItemDto">
                                                <lc:PlayableMediaItem
                                                    Width="240"
                                                    Height="350"
                                                    ImageSource="{x:Bind Converter={StaticResource PrimaryImageConverter}}"
                                                    Model="{x:Bind}" />
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Horizontal" Spacing="10" />
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                    </ItemsControl>
                                </ScrollViewer>
                            </StackPanel>
                        </ItemContainer>
                    </DataTemplate>
                </ItemsView.ItemTemplate>
                <ItemsView.Layout>
                    <StackLayout Orientation="Vertical" Spacing="20" />
                </ItemsView.Layout>
            </ItemsView>

        </StackPanel>
    </ScrollViewer>
</Page>
