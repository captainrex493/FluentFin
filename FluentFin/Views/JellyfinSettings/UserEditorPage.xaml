<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="FluentFin.Views.UserEditorPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:FluentFin.Dialogs.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:CommunityToolkit.WinUI"
    xmlns:vm="using:FluentFin.Core.ViewModels"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ScrollViewer>
            <Grid Width="1000" HorizontalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <StackPanel Margin="{StaticResource SmallTopBottomMargin}" Spacing="20">
                    <TextBlock Style="{ThemeResource SubheaderTextBlockStyle}" Text="{x:Bind ViewModel.User.Name, Mode=OneWay}" />
                    <SelectorBar x:Name="SelectorBar" SelectionChanged="SelectorBar_SelectionChanged">
                        <SelectorBarItem
                            IsSelected="{x:Bind IsSelected(ViewModel.SelectedSectionViewModel, vm:UserEditorSection.Profile), Mode=OneWay}"
                            Tag="{x:Bind vm:UserEditorSection.Profile}"
                            Text="Profile" />
                        <SelectorBarItem
                            IsSelected="{x:Bind IsSelected(ViewModel.SelectedSectionViewModel, vm:UserEditorSection.Access), Mode=OneWay}"
                            Tag="{x:Bind vm:UserEditorSection.Access}"
                            Text="Access" />
                        <SelectorBarItem
                            IsSelected="{x:Bind IsSelected(ViewModel.SelectedSectionViewModel, vm:UserEditorSection.ParentalControl), Mode=OneWay}"
                            Tag="{x:Bind vm:UserEditorSection.ParentalControl}"
                            Text="Parental Control" />
                        <SelectorBarItem
                            IsSelected="{x:Bind IsSelected(ViewModel.SelectedSectionViewModel, vm:UserEditorSection.Password), Mode=OneWay}"
                            Tag="{x:Bind vm:UserEditorSection.Password}"
                            Text="Password" />
                    </SelectorBar>
                </StackPanel>

                <StackPanel
                    Padding="16"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Orientation="Horizontal"
                    Spacing="16">
                    <Button Command="{x:Bind ViewModel.SaveCommand}">
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <SymbolIcon Symbol="Save" />
                            <TextBlock Text="Save" />
                        </StackPanel>
                    </Button>
                    <Button Command="{x:Bind ViewModel.ResetCommand}">
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <SymbolIcon Symbol="Refresh" />
                            <TextBlock Text="Reset" />
                        </StackPanel>
                    </Button>
                </StackPanel>

                <Frame x:Name="NavFrame" Grid.Row="1" />
            </Grid>
        </ScrollViewer>
    </Grid>

</Page>
