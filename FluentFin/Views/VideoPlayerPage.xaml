<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="FluentFin.Views.VideoPlayerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:FluentFin.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:flyleaf="using:FlyleafLib.Controls.WinUI"
    xmlns:local="using:FluentFin.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <flyleaf:FullScreenContainer x:Name="FSC" PointerMoved="FSC_PointerMoved">
        <flyleaf:FlyleafHost x:Name="flyleafHost" Player="{x:Bind ViewModel.MediaPlayer}">
            <controls:TransportControls
                x:Name="TransportControls"
                Player="{x:Bind ViewModel.MediaPlayer, Mode=OneWay}"
                Playlist="{x:Bind ViewModel.Playlist}" />
        </flyleaf:FlyleafHost>
    </flyleaf:FullScreenContainer>
</Page>
