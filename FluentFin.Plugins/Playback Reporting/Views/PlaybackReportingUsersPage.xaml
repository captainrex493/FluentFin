<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="FluentFin.Plugins.Playback_Reporting.Views.PlaybackReportingUsersPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:FluentFin.Plugins.Playback_Reporting.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wtv="using:WinUI.TableView"
    mc:Ignorable="d">

    <Grid Margin="36">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <wtv:TableView
            Grid.Row="1"
            AutoGenerateColumns="False"
            CanReorderItems="False"
            CanSortColumns="False"
            IsReadOnly="True"
            ItemsSource="{x:Bind ViewModel.Activities, Mode=OneWay}">
            <wtv:TableView.Columns>
                <wtv:TableViewTextColumn
                    Width="*"
                    Binding="{Binding UserName}"
                    Header="User"
                    IsReadOnly="True" />
                <wtv:TableViewTextColumn
                    Width="*"
                    Binding="{Binding LastSeen}"
                    Header="Last Activity"
                    IsReadOnly="True" />
                <wtv:TableViewTextColumn
                    Width="*"
                    Binding="{Binding LatestDate}"
                    Header="Last Played"
                    IsReadOnly="True" />
                <wtv:TableViewTextColumn
                    Width="*"
                    Binding="{Binding ClientName}"
                    Header="Last Client"
                    IsReadOnly="True" />
                <wtv:TableViewTextColumn
                    Width="*"
                    Binding="{Binding TotalCount}"
                    Header="Total Plays"
                    IsReadOnly="True" />
                <wtv:TableViewTextColumn
                    Width="*"
                    Binding="{Binding TotalPlayTime}"
                    Header="Total Time"
                    IsReadOnly="True" />
            </wtv:TableView.Columns>
        </wtv:TableView>

    </Grid>
</Page>
