<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="FluentFin.Plugins.Playback_Reporting.Views.UsageReportPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Margin="36" RowSpacing="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ContentPresenter Grid.Row="1" Content="{x:Bind ViewModel.ByDay}" />

        <ContentPresenter Grid.Row="2" Content="{x:Bind ViewModel.ByHour}" />
    </Grid>
</Page>
